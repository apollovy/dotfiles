sessionname $PROJECT_NAME
deflog on
hardstatus on
hardstatus alwayslastline
hardstatus string "%`: %w"
screen -t vi
stuff "go $PROJECT_NAME\012 vi\012"
screen -t runserver 
stuff "go $PROJECT_NAME\012 runserver\012"
screen -t py ssh py
stuff "export PROJECT_NAME=$PROJECT_NAME; go \$PROJECT_NAME\012"
screen -t PRODUCTION ssh $PROJECT_NAME.production
select 0
# Show session name
# http://superuser.com/questions/212392/how-to-include-screens-session-name-in-hardstatus/212520#212520
backtick 0 30 30 sh -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*" | cut -d . -f 2'
